.h-add-topic-wrapper
    .h-topic-types
        margin 0

        .h-topic-type
            display inline-block
            vertical-align top
            margin 0 0 0 .5em

            &:first-child
                margin-left 0

            a
                display block
                padding 6px 12px
                border-radius 2px
                line-height 20px

                .h-glyph16
                    margin 0 4px 0 0
                    vertical-align baseline

            &.is-selected
                a
                    //background: rgba(0,0,0,0.1);
                    background: #2fa42e;
                    color #fff

    .h-topic-title
        margin 1em 0 0
        width: 100%;
        font-size: 1.5em;
        font-weight: bold;

    .h-topic-category
        margin 1em 0 0
        color: #777;

        select
            margin 0 0 0 4px;

    .h-topic-description
        margin 2em 0
        width: 100%;
        min-width: 400px;
        min-height: 300px;
        box-sizing border-box

        .redactor-box
            margin-bottom: 0

        &.error-box
            border: 2px solid red

    .h-topic-tags
        margin 1em 0 0
        color: #777;

        .not_valid
            background: #fbd8db !important;
            color: #90111a !important

        div.tagsinput
            margin 4px 0 0
            padding: 5px 5px 0 5px;
            width 100%
            height:100px;
            overflow-y: auto;

            box-sizing border-box
            border:1px solid rgba(0,0,0,0.1)
            background: #fff;

            span.tag
                display: inline-block;
                padding: 3px 5px;
                margin 0 4px 4px 0

                background: #cde69c;
                border: 1px solid #a5d24a;
                border-radius:2px;
                text-decoration:none;

                line-height: 1em;
                font-size:13px;
                color: #444;

            a
                font-weight: bold;
                color: #82ad2b;
                text-decoration:none;
                font-size: 11px;

            input
                width: 80px;
                margin:0;
                font-size: 13px;
                border:1px solid transparent;
                padding: 2px;
                background: transparent;
                color: #000;
                margin-right:5px;
                margin-bottom:5px;

            & > div
                display: inline-block

    .h-buttons-wrapper
        margin 2em 0 0

    .h-topic-preview
        margin: 2em 0;
        padding: 1em
        border: 1px dashed #a52a2a;
        background: #ffd;
        border-radius 2px

    input[type="submit"]
        margin-right: 10px;