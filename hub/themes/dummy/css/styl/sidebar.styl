.h-sidebar-wrapper
    .h-userbox-wrapper
        background: #fdfdfe;
        padding: 1em;
        border-radius: 3px;
        box-shadow: 0 0 2px rgba(0,0,0,.1), 0 2px 2px rgba(0,0,0,0.1);
        overflow: hidden;

        .h-user-info
            text-align center
            margin 0 0 1em

            .h-userpic-wrapper
                font-size 0
                line-height 0

                img
                    width: 96px;
                    margin 0;
                    border-radius: 50%;

            .h-username
                margin 1em 0 0

            .h-kudos-wrapper
                margin 1em 0 0
                text-align center
                font-size 16px

        .h-add-topic
            text-align center

        .h-user-nav
            margin 1em 0 -.5em

            li
                margin 0
                border-top 1px solid rgba(0,0,0,.1)

                a
                    display block
                    padding .75em 0
                    line-height 16px

                    .h-count
                        float: right
                        display inline-block
                        margin 0 0 0 4px

                        .icon
                            top 0
                            margin-right 0

    .s-nav-wrapper
        margin 2em 0 0

        & > ul
            box-shadow: 0 0 2px rgba(0,0,0,.1), 0 2px 2px rgba(0,0,0,0.1)

    .h-aside-block
        margin 2em 0 0
        padding: 1em;
        border-radius: 3px;
        box-shadow: 0 0 2px rgba(0,0,0,.1), 0 2px 2px rgba(0,0,0,0.1);

        h5
            margin: 0 0 1rem;
            padding 0 0 0.25em
            border-bottom 1px solid rgba(0,0,0,.1)
            text-align right
            color: #aaa;

        ul
            margin 0

            li
                margin 1em 0 0
                list-style: none;
                line-height 1.25em
                word-break: break-all;

                &:first-child
                    margin-top 0

                a
                    text-decoration: none;

                span
                    margin-left 4px

            img.userpic
                display inline-block
                vertical-align middle
                margin 0 4px 0 0
                width: 16px;
                height: 16px;