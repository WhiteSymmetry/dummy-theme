.s-breadcrumbs-wrapper
    width $site_width
    margin 1.5em auto
    font-size (12/14)em
    min-height 1em

    & + .s-main-block
        margin-top 1em

    .s-breadcrumbs-block
        color #888

        .s-breadcrumb-item
            margin 0
            display inline-block
            vertical-align top

            &:first-child
                &:before
                    display none

                .s-breadcrumb-link
                    padding-left 0

